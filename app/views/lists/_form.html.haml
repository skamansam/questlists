= form_for @list, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area'
  .control-group
    = f.label :icon, :class => 'control-label'
    .controls
      = f.text_field :icon, :class => 'text_field'
  .control-group
    = f.label :created_by, :class => 'control-label'
    .controls
      = f.number_field :created_by, :class => 'number_field'
  .control-group
    = f.label :list_item, :class => 'control-label'
    .controls
      = f.number_field :list_item, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), lists_path, :class => 'btn'
