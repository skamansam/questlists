- model_class = List
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @list.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @list.description
%p
  %strong= model_class.human_attribute_name(:icon) + ':'
  %br
  = @list.icon
%p
  %strong= model_class.human_attribute_name(:created_by) + ':'
  %br
  = @list.created_by
%p
  %strong= model_class.human_attribute_name(:list_item) + ':'
  %br
  = @list.list_item

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), lists_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_list_path(@list), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), list_path(@list), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
